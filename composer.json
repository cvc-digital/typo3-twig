{
    "name": "cvc/typo3-twig",
    "description": "Use the Twig template engine within your TYPO3 project.",
    "license": "GPL-3.0-or-later",
    "type": "typo3-cms-extension",
    "authors": [
        {
            "name": "Markus Poerschke",
            "email": "poerschke@cvc.digital",
            "homepage": "https://cvc.digital",
            "role": "Developer"
        },
        {
            "name": "CARL von CHIARI GmbH",
            "email": "opensource@cvc.digital",
            "homepage": "https://cvc.digital",
            "role": "Maintainer"
        }
    ],
    "homepage": "https://cvc.digital",
    "require": {
        "php": "^8.1",
        "twig/twig": "^3",
        "typo3/cms-core": "^12",
        "typo3/cms-extbase": "^12",
        "typo3/cms-frontend": "^12"
    },
    "require-dev": {
        "cvc/twig-documentor": "^0.3",
        "ergebnis/composer-normalize": "^2.28",
        "friendsofphp/php-cs-fixer": "^3.13",
        "nimut/testing-framework": "dev-main",
        "phpstan/phpstan": "^1.5",
        "phpunit/phpunit": "^9.5",
        "symfony/var-dumper": "^5.4",
        "typo3/cms-form": "^12"
    },
    "minimum-stability": "dev",
    "replace": {
        "typo3-ter/cvc_twig": "self.version"
    },
    "autoload": {
        "psr-4": {
            "Cvc\\Typo3\\CvcTwig\\": "Classes"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Cvc\\Typo3\\CvcTwig\\Tests\\": "Tests"
        }
    },
    "config": {
        "allow-plugins": {
            "typo3/cms-composer-installers": true,
            "typo3/class-alias-loader": true,
            "ergebnis/composer-normalize": true
        },
        "bin-dir": ".Build/bin",
        "vendor-dir": ".Build/vendor"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "3.0.x-dev"
        },
        "typo3/cms": {
            "cms-package-dir": "{$vendor-dir}/typo3/cms",
            "extension-key": "cvc_twig",
            "web-dir": ".Build/public",
            "app-dir": ".Build"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Nimut\\TestingFramework\\Composer\\ExtensionTestEnvironment::prepare"
        ]
    }
}
