{
    "name": "cvc/typo3-twig",
    "description": "Use the Twig template engine within your TYPO3 project.",
    "homepage": "https://cvc.digital",
    "type": "typo3-cms-extension",
    "license": "GPL-3.0+",
    "version": "1.0.0",
    "authors": [
        {
            "name": "Markus Poerschke",
            "email": "poerschke@cvc.digital",
            "homepage": "https://cvc.digital",
            "role": "Developer"
        },
        {
            "name": "CARL von CHIARI GmbH",
            "email": "opensource@cvc.digital",
            "homepage": "https://cvc.digital",
            "role": "Maintainer"
        }
    ],
    "replace": {
        "cvc_twig": "self.version",
        "typo3-ter/cvc_twig": "self.version"
    },
    "require": {
        "php": ">=7.2,<7.4",
        "twig/twig": "^2.0",
        "typo3/cms-core": "^8.7||^9.5",
        "typo3/cms-extbase": "^8.7||^9.5",
        "typo3/cms-frontend": "^8.7||^9.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^7",
        "friendsofphp/php-cs-fixer": "^2.3",
        "nimut/testing-framework": "^4.1.5",
        "phpstan/phpstan": "^0.10.3",
        "typo3/cms-form": "^8.7||^9.5",
        "saschaegerer/phpstan-typo3": "^0.10"
    },
    "conflict": {
        "comwrap/typo3-twig_for_typo3": "*",
        "dmk/t3twig": "*"
    },
    "autoload": {
        "psr-4": {
            "Cvc\\Typo3\\CvcTwig\\": "Classes/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "mkdir -p .Build/public/typo3conf/ext/",
            "[ -L .Build/public/typo3conf/ext/cvc_twig ] || ln -snvf ../../../../. .Build/public/typo3conf/ext/cvc_twig"
        ]
    },
    "extra": {
        "typo3/cms": {
            "cms-package-dir": "{$vendor-dir}/typo3/cms",
            "web-dir": ".Build/public"
        }
    }
}
