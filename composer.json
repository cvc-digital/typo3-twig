{
    "name": "cvc/typo3-twig",
    "description": "Use the Twig template engine within your TYPO3 project.",
    "homepage": "https://cvc.digital",
    "type": "typo3-cms-extension",
    "license": "GPL-3.0+",
    "version": "2.0.0",
    "authors": [
        {
            "name": "Markus Poerschke",
            "email": "poerschke@cvc.digital",
            "homepage": "https://cvc.digital",
            "role": "Developer"
        },
        {
            "name": "CARL von CHIARI GmbH",
            "email": "opensource@cvc.digital",
            "homepage": "https://cvc.digital",
            "role": "Maintainer"
        }
    ],
    "replace": {
        "typo3-ter/cvc_twig": "self.version"
    },
    "require": {
        "php": ">=7.2,<7.4",
        "twig/twig": "^2.0",
        "typo3/cms-core": "^10.0",
        "typo3/cms-frontend": "^10.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8",
        "friendsofphp/php-cs-fixer": "^2.3",
        "typo3/testing-framework": "^5.0.11",
        "phpstan/phpstan": "^0.11.15"
    },
    "autoload": {
        "psr-4": {
            "Cvc\\Typo3\\CvcTwig\\": "Classes"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Cvc\\Typo3\\CvcTwig\\Tests\\": "Tests"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "TYPO3\\TestingFramework\\Composer\\ExtensionTestEnvironment::prepare"
        ]
    },
    "config": {
        "vendor-dir": ".Build/vendor",
        "bin-dir": ".Build/bin"
    },
    "extra": {
        "typo3/cms": {
            "extension-key": "cvc_twig",
            "cms-package-dir": "{$vendor-dir}/typo3/cms",
            "web-dir": ".Build/public"
        }
    }
}
