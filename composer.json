{
    "name": "cvc/typo3-twig",
    "type": "typo3-cms-extension",
    "description": "Use the Twig template engine within your TYPO3 project.",
    "homepage": "https://cvc.digital",
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "Markus Poerschke",
            "email": "poerschke@cvc.digital",
            "homepage": "https://cvc.digital",
            "role": "Developer"
        },
        {
            "name": "CARL von CHIARI GmbH",
            "email": "opensource@cvc.digital",
            "homepage": "https://cvc.digital",
            "role": "Maintainer"
        }
    ],
    "require": {
        "php": "^7.4",
        "twig/twig": "^3",
        "typo3/cms-core": "^10.3",
        "typo3/cms-extbase": "^10.3",
        "typo3/cms-frontend": "^10.3"
    },
    "replace": {
        "typo3-ter/cvc_twig": "self.version"
    },
    "require-dev": {
        "cvc/twig-documentor": "^0.2",
        "ergebnis/composer-normalize": "^2.3",
        "friendsofphp/php-cs-fixer": "^2.16",
        "phpstan/phpstan": "^0.12.18",
        "phpunit/phpunit": "^9",
        "symfony/var-dumper": "^4.3",
        "typo3/testing-framework": "^6"
    },
    "config": {
        "bin-dir": ".Build/bin",
        "vendor-dir": ".Build/vendor"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.0.x-dev"
        },
        "typo3/cms": {
            "extension-key": "cvc_twig",
            "cms-package-dir": "{$vendor-dir}/typo3/cms",
            "web-dir": ".Build/public"
        }
    },
    "autoload": {
        "psr-4": {
            "Cvc\\Typo3\\CvcTwig\\": "Classes"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Cvc\\Typo3\\CvcTwig\\Tests\\": "Tests"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "TYPO3\\TestingFramework\\Composer\\ExtensionTestEnvironment::prepare"
        ],
        "fix": [
            "@fix:code-style",
            "@composer normalize"
        ],
        "test": [
            "@composer normalize --dry-run",
            "@test:code-style",
            "@test:phpstan",
            "@test:phpunit"
        ],
        "test:code-style": "php-cs-fixer fix --dry-run --diff",
        "test:phpstan": "phpstan analyse",
        "test:phpunit": "phpunit -c ./phpunit.xml"
    }
}
